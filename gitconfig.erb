[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	co = checkout
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = mate -w
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

[user]
	email = ivanov-vk@yandex.ru
	name = Victor Ivanov
[giggle]
	main-window-view = HistoryView
	history-view-vpane-position = 579
	show-graph = true
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	file-view-vpane-position = 629
	file-view-hpane-position = 348
[gui]
	historybrowser = gitg
	editor = gmate
[diff]
	tool = meld
[merge]
	tool = meld
[cola]
	fontdiff = Droid Sans Mono, 10, -1, 5, 50, 0, 0, 0, 0, 0
	tabwidth = 2
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
